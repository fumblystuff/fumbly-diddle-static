---
layout: base
---

{% assign products = collections.productList %}

<body class="is-preload">
	{% include 'header.html' %}
	<section id="main" class="wrapper style1">
		<header class="major">
			<h2>Products</h2>
		</header>
		<div class="container">
			<div class="row gtr-150">
				<div class="col-4 col-12-medium">
					<section id="sidebar">
						<section>
							<h2>All Products</h2>					
							{%- if products.length > 0 %}
							<ul class="alt">
								{%- for product in products %}
								<li>
									<h3>
										<a style="cursor: pointer" href="{{product.url}}">{{ product.data.title }}</a>
									</h3>
								</li>
								{%- endfor %}
							</ul>
							{%- else %}
							<p>No products found</p>
							{%- endif %}
						</section>
					</section>
				</div>
				<div class="col-8 col-12-medium imp-medium">
					<section id="content">
						<h2>{{title}}</h2>
						<strong>Platform{%- if platform.length > 1 %}s{% endif %}:</strong>
						{% for plat in platform %}
							{{ plat }}
							{%- unless forloop.last %}, {% endunless %}
						{% endfor %}
						<hr />
						{{ content }}
					</section>
				</div>
			</div>
		</div>
	</section>
	{% include 'footer.html' %}
	{% include 'page-scripts.html' %}
</body>
---
layout: base
---

<body class="is-preload">
	{% include 'header.html' %}

	<section id="main" class="wrapper style1">
		<header class="major">
			<h2>Products</h2>
			<p>Only one for now, but we have plans to publish more.</p>
		</header>
		<div class="container">
			<div class="row gtr-150">
				<div class="col-4 col-12-medium">
					<section id="sidebar">
						<section>
							<h3>Catalog</h3>
							{% assign products = collections.product %}
							{%- if products.length > 0 %}
							<ul class="alt">
								{%- for product in products %}
								<li>
									<h4><a style="cursor: pointer" href="{{product.url}}">{{ product.data.title }}</a></h4>
									{% comment %} {%- if product.data.description %}
									<p>{{ product.data.description }}</p>
									{%- endif %} {% endcomment %}
								</li>
								{%- endfor %}
							</ul>
							{%- else %}
							<p>No products found</p>
							{%- endif %}
						</section>
					</section>
				</div>
				<div class="col-8 col-12-medium imp-medium">
					<section id="content">
						{% if title != 'Products' %}
						<h3>{{title}}</h3>
						{% endif %}
						{{ content }}
					</section>
				</div>
			</div>
		</div>
	</section>

	{% include 'footer.html' %}
	{% include 'page-scripts.html' %}
</body>